<Window x:Class="TermProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TermProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button HorizontalAlignment="Left" Margin="-54,-5,0,0" VerticalAlignment="Top"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="645,334,0,0" VerticalAlignment="Top" Width="60"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="30,110,180,45">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox HorizontalAlignment="Left" Margin="30,56,0,0" VerticalAlignment="Top" Width="577"/>
        <Button Content="Delete" HorizontalAlignment="Left" Height="20" Margin="645,369,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click" Background="#FFDCBDBD" BorderBrush="Black"/>
        <TextBox HorizontalAlignment="Left" Margin="645,190,0,0" TextWrapping="Wrap" Style ="{StaticResource WatermarkTextBox}" VerticalAlignment="Top" Width="80" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Margin="645,220,0,0" TextWrapping="Wrap" Style ="{StaticResource WatermarkTextBox1}" VerticalAlignment="Top" Width="80"/>
        <TextBox HorizontalAlignment="Left" Margin="645,250,0,0" TextWrapping="Wrap" Style ="{StaticResource WatermarkTextBox2}" VerticalAlignment="Top" Width="80" TextChanged="TextBox_TextChanged_1"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="715,334,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_1"/>
    </Grid>
</Window>
